<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateus.mateusaugusto.MainActivity_Mateus">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="6dp">

        <EditText
            android:id="@+id/valor_alcoool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/textView4"
            android:ems="10"
            android:hint="Valor Alcool"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/valor_gasolina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/valor_alcoool"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Valor Gasolina"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:text="Alcool:"
            android:textSize="36sp"
            android:layout_alignBaseline="@+id/valor_alcoool"
            android:layout_alignBottom="@+id/valor_alcoool"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/valor_alcoool" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/valor_gasolina"
            android:text="Gasolina:"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_mensagem"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/valor_alcoool"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:text="Mensagem Subliminar"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView4"
            android:onClick="btnCalcular"
            android:text="Calcular" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
