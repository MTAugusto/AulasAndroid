<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateus.ead02.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/vl_expressao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Primeiro Valor"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:layout_below="@+id/text"
            android:layout_alignStart="@+id/vl_expressao2" />

        <TextView
            android:id="@+id/text"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Calculadora de uma Operação"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="67dp"
            android:onClick="onButtonCalcular"
            android:text="Calcular"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_soma"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="btnSoma"
            android:text="+"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/btn_subtracao"
            android:layout_alignBottom="@+id/btn_subtracao"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_subtracao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="btnSubitracao"
            android:text="-"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_divisao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="btnDivisao"
            android:text="/"
            android:textSize="24sp"
            android:layout_below="@+id/btn_soma"
            android:layout_alignStart="@+id/btn_soma"
            android:layout_marginTop="26dp" />

        <Button
            android:id="@+id/btn_multiplicacao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="btnMultiplicacao"
            android:text="*"
            android:textSize="24sp"
            android:layout_alignBaseline="@+id/btn_divisao"
            android:layout_alignBottom="@+id/btn_divisao"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/vl_expressao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_operacao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Segundo valor"
            android:inputType="number" />

        <TextView
            android:id="@+id/tx_operacao"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/vl_expressao"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
